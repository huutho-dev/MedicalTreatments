<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_bot"
    android:layout_marginLeft="@dimen/card_margin_left"
    android:layout_marginRight="@dimen/card_margin_right"
    android:layout_marginTop="@dimen/card_margin_top"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_name_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="Nhà thuốc : ANH THƯ"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_address_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="Địa chỉ : 479 Xô Viết Nghệ Tĩnh"
            android:textColor="@color/colorTextSecondary" />

        <TextView
            android:id="@+id/txt_location_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="Chủ nhà thuốc :Bùi Trúc Lâm"
            android:textColor="@color/colorTextSecondary" />


    </LinearLayout>

</android.support.v7.widget.CardView>